<% content_for(:html_title) { "Edit Dojo # #{@dojo.id}" } %>
<h1> Edit Dojo #<%= @dojo.id %> </h1>
<form id="dojo_form" action="patch" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="info"> 
        <label> Branch: </label> 
        <input type="text" name="dojo[branch]" value="<%= @dojo.branch %>"> 
        <% if flash[:branch] %>
            <p class="error"><%= flash[:branch] %></p>
        <% end %>
    </div>
    <div class="info"> 
        <label> Street: </label> 
        <input type="text" name="dojo[street]" value="<%= @dojo.street %>"> 
        <% if flash[:street] %>
            <p class="error"><%= flash[:street] %></p>
        <% end %>
    </div>
    <div class="info"> 
        <label> City: </label> 
        <input type="text" name="dojo[city]" value="<%= @dojo.city %>"> 
        <% if flash[:city] %>
            <p class="error"><%= flash[:city] %></p>
        <% end %>
    </div>
    <div class="info"> 
        <label> State: </label> 
        <input type="text" name="dojo[state]" value="<%= @dojo.state %>"> 
        <% if flash[:state] %>
            <p class="error"><%= flash[:state] %></p>
        <% end %>
    </div>
    <input type="submit" class="submit_btn" value="Edit Dojo">
</form>
<p class="footer"> <a href="/"> Home <a> </p>