<% content_for(:html_title) { 'Dojo Dashboard' } %>
<h1> Listing <%= @dojos.count %> Dojos </h1>
<table>
    <thead>
        <th> Branch </th>
        <th> Street </th>
        <th> City </th>
        <th> State </th>
        <th> Actions </th>
    </thead>
    <tbody>
    <%  @dojos.each do |dojo| %>
        <tr>
            <td> <%= dojo.branch %> </td>
            <td> <%= dojo.street %> </td>
            <td> <%= dojo.city %> </td>
            <td> <%= dojo.state %> </td>
            <td> 
                <a class="action_btn" href="dojos/<%= dojo.id %>">Show</a>  | 
                <a class="action_btn" href="dojos/<%= dojo.id %>/edit"> Edit</a>  | 
                <a class="action_btn" href="dojos/<%= dojo.id %>/delete"> Delete </a> 
            </td>
        </tr>
    <%  end %>
    </tbody>
</table>
<a href="dojos/new" id="create_btn"> New Dojo </a>
